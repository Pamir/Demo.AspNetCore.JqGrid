<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/jquery-ui/themes/base/jquery-ui.min.css" />
    <link rel="stylesheet" href="~/lib/jqgrid/css/ui.jqgrid.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <ul id="menu">
            <li>
                Classic
                <ul>
                    <li><a asp-controller="JavaScript" asp-action="Basics">Paging, Sorting & Formatting</a></li>
                    <li><a asp-controller="JavaScript" asp-action="DynamicScrolling">Dynamic Scrolling</a></li>
                    <li><a asp-controller="JavaScript" asp-action="Grouping">Grouping</a></li>
                    <li><a asp-controller="JavaScript" asp-action="SingleSearching">Single Searching</a></li>
                    <li><a asp-controller="JavaScript" asp-action="AdvancedSearching">Advanced Searching</a></li>
                    <li><a asp-controller="JavaScript" asp-action="ToolbarSearching">Toolbar Searching</a></li>
                    <li><a asp-controller="JavaScript" asp-action="CellEditing">Cell Editing</a></li>
                    <li><a asp-controller="JavaScript" asp-action="InlineEditing">Inline Editing</a></li>
                    <li><a asp-controller="JavaScript" asp-action="FormEditing">Form Editing</a></li>
                    <li><a asp-controller="JavaScript" asp-action="Subgrid">Subgrid</a></li>
                    <li><a asp-controller="JavaScript" asp-action="SubgridAsGrid">Subgrid as Grid</a></li>
                    <li><a asp-controller="JavaScript" asp-action="TreeGrid">TreeGrid</a></li>
                </ul>
            </li>
            <li>
                Strongly Typed Helper
                <ul>
                    <li><a asp-controller="Helper" asp-action="Basics">Paging, Sorting & Formatting</a></li>
                    <li><a asp-controller="Helper" asp-action="DynamicScrolling">Dynamic Scrolling</a></li>
                    <li><a asp-controller="Helper" asp-action="Grouping">Grouping</a></li>
                    <li><a asp-controller="Helper" asp-action="SingleSearching">Single Searching</a></li>
                    <li><a asp-controller="Helper" asp-action="AdvancedSearching">Advanced Searching</a></li>
                    <li><a asp-controller="Helper" asp-action="CellEditing">Cell Editing</a></li>
                    <li><a asp-controller="Helper" asp-action="FormEditing">Form Editing</a></li>
                    <li><a asp-controller="Helper" asp-action="Subgrid">Subgrid</a></li>
                    <li><a asp-controller="Helper" asp-action="SubgridAsGrid">Subgrid as Grid</a></li>
                    <li><a asp-controller="Helper" asp-action="TreeGrid">TreeGrid</a></li>
                </ul>
            </li>
        </ul>
        <hr />
    </header>
    <div>
        @RenderBody()
    </div>
    <footer>
        <hr />
        Copyright &copy; 2016 Tomasz Pęczek
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-ui/jquery-ui.min.js"></script>
    @if (ViewBag.JqGrid == "free-jqgrid")
    {
        <script src="~/lib/free-jqgrid/js/i18n/grid.locale-en.js"></script>
        <script src="~/lib/free-jqgrid/js/jquery.jqgrid.min.js"></script>
    }
    else
    {
        <script src="~/lib/jqgrid/js/i18n/grid.locale-en.js"></script>
        <script src="~/lib/jqgrid/js/jquery.jqGrid.min.js"></script>
    }
    <script src="~/js/site.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
